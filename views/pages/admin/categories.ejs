<div class="px-4">
  <div class="text-sm breadcrumbs">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/admin">Admin</a></li>
      <li>Kategorien</li>
    </ul>
  </div>
  <div class="flex flex-col w-full sm:flex-row lg:flex-row md:flex-row">
    <form action="/admin/products/search" method="GET">
      <div class="form-control grid flex-grow">
        <div class="input-group">
          <input
            type="text"
            name="search"
            placeholder="Search…"
            class="input input-bordered"
          />
          <button type="submit" class="btn btn-square">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
              />
            </svg>
          </button>
        </div>
      </div>
    </form>
    <label for="addcategory-modal" class="btn gap-2 grid">
      Neue Kategorie
    </label>
  </div>
  <div class="overflow-x-auto">
    <table class="table w-full">
      <!-- head -->
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Aktionen</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(function(category){ %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.title %></td>
          <td>
            <a class="btn" href="/admin/categories/<%= category.id %>"
              ><i class="fa fa-pencil"></i></a
            ><a
              class="btn btn-secondary"
              href="/admin/categories/<%= category.id %>/delete"
              ><i class="fa fa-trash"></i
            ></a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <!-- Modal Category Creation -->
  <form action="/admin/categories" method="POST">
    <input type="checkbox" id="addcategory-modal" class="modal-toggle" />
    <div class="modal modal-bottom sm:modal-middle">
      <div class="modal-box">
        <h3 class="font-bold text-lg">Neue Kategorie anlegen</h3>
        <div class="form-control">
          <label class="label">
            <span class="label-text">Titel</span>
          </label>
          <label class="input-group">
            <span>Titel</span>
            <input
              type="text"
              placeholder="Fahrräder"
              class="input input-bordered"
              name="title"
            />
          </label>
        </div>
        <div class="modal-action">
          <label for="addcategory-modal" class="btn btn-circle btn-outline">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              />
            </svg>
          </label>
          <button for="addcategory-modal" class="btn">Speichern</button>
        </div>
      </div>
    </div>
  </form>
</div>
